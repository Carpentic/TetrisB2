<Page
    x:Class="TetrisB2.GamePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:Game="using:TetrisB2.Game"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid HorizontalAlignment="Left"
          VerticalAlignment="Center"
          Margin="0"
          Padding="0">
        <Game:GameView HorizontalAlignment="Left" VerticalAlignment="Top" Width="500" Margin="30, 0, 15, 0"/>
    </Grid>
</Page>
