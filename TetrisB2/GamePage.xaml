<Page
    x:Class="TetrisB2.GamePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:Game="using:TetrisB2"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
    <Grid>
        <Game:GameTotalView Name="GameWindow" Margin="0,3,0,-3"/>
        <Button Content="Main Menu" HorizontalAlignment="Right" VerticalAlignment="Bottom" Width="100" Height="75" Margin="15" Click="ReturnToMainClicked"/>
    </Grid>
</Page>
