<Page
    x:Class="TetrisB2.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
    <Grid>
        <Button Content="Play" HorizontalAlignment="Center" Height="50" Width="100" Margin="-250, 0, 0, 0" Click="PlayButtonClicked"/>
        <Button Content="Options" HorizontalAlignment="Center" Height="50" Width="100" Margin="0, 0, 0, 0" Click="OptionsButtonClicked"/>
        <Button Content="Quit" HorizontalAlignment="Center" Height="50" Width="100" Margin="250, 0, 0, 0" Click="QuitButtonClicked"/>
    </Grid>
</Page>
